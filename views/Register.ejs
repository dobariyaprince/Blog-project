  <title>Register</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        a{
            text-decoration: none;
        }
        body{
            background-color: rgb(220, 220, 220);
        }

        .nav-pills li a{
            font-weight: 500;
            color: black;
            transition: all 0.5s;
        }
        .nav-pills li a:hover{
            color: black;
            text-shadow: 4px 4px 8px rgba(0, 0, 0, 0.8);
        }
        .nav-pills li .heigh-light{
            background-color: rgb(35, 120, 92);
            color: whitesmoke;
        }


        .slider {
            display: flex;
            align-items: center;
        }

        .card{
            display: block;
            background-color: transparent;
            border: none;
        }
        .card a.btn{
            width: 100px;
            box-shadow: 2px 2px 5px black;
            margin-right: 10px;
        }

        .slider-home{
            background: url("https://images.unsplash.com/photo-1453728013993-6d66e9c9123a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8bGVuc3xlbnwwfHwwfHw%3D&w=1000&q=80");
