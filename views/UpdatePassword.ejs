<script>
    <% if(flash.success && flash.success.length > 0){ %>
      new Noty({
        text : '<%= flash.success %>',
        type : 'success',
        timeout : 1500,
        theme : 'relax'
      }).show()
      <% } %>
  
      <% if(flash.error && flash.error.length > 0){ %>
      new Noty({
        text : '<%= flash.error %>',
        type : 'error',
        timeout : 1500,
        theme : 'relax'
      }).show()
      <% } %>
  
  </script>